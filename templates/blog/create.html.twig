{% extends 'base.html.twig' %}
{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <h1>
        {% if editMode %}
            Edit Article !
        {% else %}
            New Article ! 
        {% endif %}
    </h1>

    {{ form_start(formArticle) }}

    {{ form_row(formArticle.title, {'attr': {'placeholder': "Article title"}}) }}
    {{ form_row(formArticle.category) }}
    {{ form_row(formArticle.content, {'attr':{'placeholder': "Article content"}}) }}
    {{ form_row(formArticle.image, {'attr':{'placeholder': "Article picture"}}) }}

    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Edit Article
        {% else %}
            Add Article
        {% endif %}
    
    </button>

    {{ form_end(formArticle) }}

{% endblock %}